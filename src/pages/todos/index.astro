---
import Layout from '../../components/Layout.astro'
import type { Todo } from '../../types';

const response = await fetch('https://jsonplaceholder.typicode.com/todos');
const groups: Todo[] = await response.json();
---

<Layout title="List of products" color="white">
	<div class="mb-5" >Groups list:</div>
	<div>
		{groups.map((item) => <div class="border-b-2 border-b-blue-950 py-3" >
				Todo:
				<a href=`todos/${item.id}` >
				<p>{item.title}</p>
				<p>Completed: {item.completed ? 'yes' : 'no'}</p>
			</a>
			</div>)}
	</div>
</Layout>
